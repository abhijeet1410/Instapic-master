<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/transprent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/header">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:text="SELECT FRAME"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:background="@color/transprent"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/mainLayoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:layout_margin="5dp"
                android:background="@color/white"
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


    </LinearLayout>

   <LinearLayout
       android:id="@+id/llyBottom"
       android:background="@color/header"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="60dp">


       <LinearLayout
           android:id="@+id/llyOne"
           android:orientation="horizontal"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="wrap_content">

           <ImageView
               android:padding="10dp"
               android:src="@drawable/btn_em_smile_bg"
               android:layout_width="60dp"
               android:layout_height="60dp" />


       </LinearLayout>

       <LinearLayout
           android:gravity="center"
           android:id="@+id/llyTwo"
           android:orientation="horizontal"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <ImageView
               android:padding="10dp"
               android:src="@drawable/btn_em_sport_bg"
               android:layout_width="60dp"
               android:layout_height="60dp" />


       </LinearLayout>


   </LinearLayout>

    <LinearLayout
        android:background="@color/transprent"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </LinearLayout>


</LinearLayout>


