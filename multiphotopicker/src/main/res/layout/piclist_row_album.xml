<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutRoot">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlSelectedAlbum"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_album"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:contentDescription="@string/todo"
                android:layout_centerInParent="true"
                android:padding="2dp"
                android:scaleType="centerCrop" />

        </RelativeLayout>

        <TextView
            android:id="@+id/name_album"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Name album"
            android:textColor="#ff161616"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/path_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="sdcard/photo/0/new"
            android:textColor="#888888"
            android:textSize="12.0sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iconNext"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:contentDescription="@string/todo"
            android:scaleType="fitEnd"
            android:src="@drawable/piclist_icon_next"
            android:visibility="gone" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffe4e4e4" />

    </LinearLayout>

</RelativeLayout>